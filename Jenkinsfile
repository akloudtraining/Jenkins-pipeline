pipeline {
    agent any

    stages {
        stage('Building') {
            steps {
                echo 'We are building the application'
            }
        }
        stage('Testing') {
            steps {
                echo 'We are testing the application'
            }
        }
        stage('Deploy') {
            steps {
                echo 'We are deploying the application'
            }
        }
        
    }
}